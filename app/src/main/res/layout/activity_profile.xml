<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvProfileFirstName"
        android:text="Tejas Shah"
        android:textSize="15pt"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvProfileEmail"
        android:layout_below="@+id/tvProfileFirstName"
        android:layout_centerHorizontal="true"
        android:text="tejasshah@gmail.com"
        android:layout_marginTop="20dp"
        android:textSize="13pt"
        android:fontFamily="casual"
        android:textColor="@color/black"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvProfileCity"
            android:text="Ahmedabad"
            android:textSize="15pt"
            android:fontFamily="cursive"
            android:layout_below="@+id/tvProfileEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

</RelativeLayout>